@model Flores_De_Mayo_Information_System.Models.Entity.AspNetUser

@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var age = DateTime.Now.Year - Model.SinisianDatabase.Birthdate.Value.Year;
}

<h2>My Account</h2>

<div class="card w-100 shadow-sm bg-light p-5 border-0 rounded mb-4" style="width: 18rem;">
    <div class="card-body text-center">
        <h2 class="card-title">Welcome <b>@Model.SinisianDatabase.FirstName @Model.SinisianDatabase.LastName</b></h2>
        <h6 class="card-subtitle mb-4 text-muted">@Model.UserName</h6>
        <p class="card-text">@Model.SinisianDatabase.FirstName @Model.SinisianDatabase.MiddleName @Model.SinisianDatabase.LastName!</p>
        <p class="card-text">@Model.SinisianDatabase.Birthdate.Value.ToString("MMMM dd, yyy"), <b>@age</b></p>
        <p class="card-text">@Model.SinisianDatabase.Sex</p>
        <a href="@Url.Action("ResetPassword","Account")" class="card-link">Reset Password</a>
    </div>
</div>

<div class="card w-100 shadow-sm bg-light p-5 border-0 rounded" style="width: 18rem;">
    <div class="card-body text-center">
        <h3 class="card-title">Change Username</h3>

        <center>
            @using (Html.BeginForm("ChangeUsername", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">

                    <div class="form-group">
                        <label for="" class="control-label col-md-6">New Username</label>
                        <div class="col-md-6">
                            <input type="text" name="username" class="form-control" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-primary" value="Update Username" />
                        </div>
                    </div>

                </div>
            }
        </center>

    </div>
</div>