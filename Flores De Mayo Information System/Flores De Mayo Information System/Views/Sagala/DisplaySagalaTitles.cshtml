@model IEnumerable<Flores_De_Mayo_Information_System.Models.Entity.SagalaTitle>

@{
    ViewBag.Title = "DisplaySagalaTitles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-md-10">
        <h2>Sagala Titles</h2>
        <p>@TempData["errorMsg"]</p>
    </div>
    <p class="col-md-2"><button onclick="Add()" class="btn btn-primary">Add</button></p>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="@Url.Action("DeleteTitle","Sagala", new { titleId =  item.STitId })" class="btn btn-warning" onclick="return confirm('Delete @item.Name?')">Delete</a>
            </td>
        </tr>
    }

</table>
<div class="modal fade rounded" id="modal-for-adding" style="min-width:490px;">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header" style="background-color:#008d88">
                <!-- Heading -->
                <h3 class="modal-title" style="color: #ffffff;">Add Sagala Title</h3>
                <a href="#" class="close" data-dismiss="modal" style="color: #000000;">&times;</a>
            </div>

            <div class="modal-body" id="modal-adding-body">
                <!-- Content Body -->
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Add = function () {

            var url = "/Sagala/AddSagalaTitle";

            $("#modal-adding-body").load(url, function () {
                $("#modal-for-adding").modal("show");

            })

        }
    </script>
}