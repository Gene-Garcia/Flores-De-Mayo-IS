@model IEnumerable<Flores_De_Mayo_Information_System.Models.Entity.SagalaPartner>

@{
    ViewBag.Title = "DisplaySagalas";
    Layout = "~/Views/Shared/_WebContent.cshtml";
}

<div class="container">
    <div class="card mb-5 bg-light shadow border-0">
        <h2 class="m-5">Sagala</h2>
    </div>
</div>

<div class="container">

    @foreach (var item in Model)
    {
        <div class="card p-5 mb-5 bg-light shadow border-0">
            <h3 class="">@item.SagalaTitle.Name</h3>

            <div class="row">
                <div class="col-sm-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <p class="card-text text-center"><b>@item.Application.SinisianDatabase.LastName, @item.Application.SinisianDatabase.FirstName @item.Application.SinisianDatabase.MiddleName</b></p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            @if (item.Application1 == null)
                            {
                                <p class="card-text text-center">--</p>
                            }
                            else
                            {
                                <p class="card-text text-center"><b>@item.Application1.SinisianDatabase.LastName, @item.Application1.SinisianDatabase.FirstName @item.Application.SinisianDatabase.MiddleName</b></p>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>